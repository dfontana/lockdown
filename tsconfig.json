{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"]
  }
}